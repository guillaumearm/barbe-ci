{
  "name": "sdp-client",
  "version": "0.6.4",
  "description": "Systeme De Pointage",
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server",
    "build": "rimraf dist && NODE_ENV=production webpack && docker build --rm=true --force-rm=true -t sdp-client .",
    "build:dev": "rimraf dist && NODE_ENV=development webpack && docker build --rm=true --force-rm=true -t sdp-client-dev .",
    "start": "npm run stop && docker run --name sdp-client -d -p 8080:80 sdp-client",
    "stop": "docker rm -f sdp-client 2> /dev/null || true",
    "start:dev": "npm run stop:dev && docker run --name sdp-client-dev -d -p 8000:80 sdp-client-dev",
    "stop:dev": "docker rm -f sdp-client-dev 2> /dev/null || true",
    "stop:all": "npm run stop && npm run stop:dev",
    "clean": "rimraf ./dist ./coverage",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --config jest.config.js",
    "test:coverage": "NODE_ENV=test jest --config jest.config.js --coverage",
    "test:watch": "NODE_ENV=test jest --config jest.config.js --watch",
    "test:all": "npm run test && npm run lint",
    "lint-staged": "lint-staged",
    "help": "node node_modules/npm-scripts-help"
  },
  "scriptshelp": {
    "build": "build the project for production",
    "build:dev": "build the project for development",
    "clean": "clean dist/ folder",
    "lint": "lint all files in src/ folder",
    "test": "start jest",
    "test:coverage": "start jest in coverage mode",
    "test:watch": "start jest in watch mode",
    "test:all": "start unit tests and lint tests",
    "help": "show this help"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/trapcodien/sdp.git"
  },
  "keywords": [
    "pointing",
    "system"
  ],
  "author": "Guillaume ARM",
  "license": "ISC",
  "homepage": "https://bitbucket.org/trapcodien/sdp#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-css-modules": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.12.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-react": "^7.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "npm-scripts-help": "^0.7.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "ramda": "^0.25.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  }
}

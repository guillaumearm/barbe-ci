{
  "env": {
    "browser": true,
    "node": true,
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
    },
  },
  "plugins": [
    "node"
  ],
  "extends": [
    "plugin:node/recommended"
  ],
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "node/no-unpublished-require": ["error", {
      "allowModules": [
        "async-describe",
        "puppeteer",
        "expect.js"
      ],
    }]
  }
}

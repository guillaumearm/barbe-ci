{
  "name": "barbe-ci",
  "version": "0.15.2",
  "description": "lightweight continuous integration for bearded",
  "bin": [
    "src/index.js"
  ],
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w ./src ./src/index.js -- -p 8080 --verbose",
    "start": "NODE_ENV=production node ./src/index.js -p 8000 --verbose",
    "clean": "rimraf ./coverage",
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "npm run lint",
    "test:all": "npm run lint",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "release": "node scripts/release.js",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "preversion": "npm run test",
    "precommit": "npm run lint-staged",
    "docker:make": "./make",
    "docker:start": "./start",
    "docker:stop": "./stop",
    "help": "node node_modules/npm-scripts-help"
  },
  "scriptshelp": {
    "dev": "start dev server (default port to 8080)",
    "start": "start production server (default port to 8000)",
    "test": "start server tests",
    "lint": "lint all files in src/ folder",
    "release": "bump version and make a release",
    "docker:make": "build server docker image for production",
    "docker:start": "start api on port 8081",
    "docker:stop": "stop api",
    "help": "show this help"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guillaumearm/barbe-ci.git"
  },
  "keywords": [
    "private",
    "ci",
    "test",
    "integration",
    "bearded"
  ],
  "author": "Guillaume ARM",
  "license": "MIT",
  "homepage": "https://github.com/guillaumearm/barbe-ci",
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.5",
    "conventional-recommended-bump": "^1.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.12.1",
    "eslint-plugin-node": "^5.2.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.1",
    "nodemon": "^1.12.1",
    "npm-scripts-help": "^0.7.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "lodash": "^4.17.4",
    "mkdirp-promise": "^5.0.1",
    "passport-bitbucket-oauth2": "^0.1.2",
    "ramda": "^0.25.0",
    "redux": "^3.7.2",
    "redux-fun": "^1.1.2",
    "request": "^2.83.0",
    "reselect": "^3.0.1",
    "uuid": "^3.1.0",
    "yargs": "^10.0.3"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

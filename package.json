{
  "name": "sdp",
  "version": "0.1.0",
  "description": "Systeme De Pointage",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "build:dev": "NODE_ENV=development webpack",
    "clean": "rimraf ./dist",
    "start": "NODE_ENV=production node ./src/server",
    "dev": "NODE_ENV=development nodemon -w ./src/server ./src/server/index.js",
    "lint": "eslint ./src",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:all": "npm run clean && npm run build && npm run build:dev && npm run lint && npm run test",
    "precommit": "lint-staged",
    "prepush": "npm run test:all",
    "preversion": "npm run test:all",
    "help": "node node_modules/npm-scripts-help"
  },
  "scriptshelp": {
    "build": "build the project for production",
    "build:dev": "build the project for development",
    "clean": "clean dist/ folder",
    "start": "Launch production server",
    "dev": "launch dev server",
    "lint": "lint all files in src/ folder",
    "test": "launch jest",
    "test:coverage": "launch jest in coverage mode",
    "test:watch": "launch jest in watch mode",
    "test:all": "clean, build prod, build dev, lint, then test",
    "precommit": "git precommit hook",
    "prepush": "git prepush hook",
    "preversion": "git preversion hook",
    "help": "show this help"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/trapcodien/sdp.git"
  },
  "keywords": [
    "pointing",
    "system"
  ],
  "author": "Guillaume ARM",
  "license": "ISC",
  "homepage": "https://bitbucket.org/trapcodien/sdp#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-css-modules": "^3.3.2",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "koa-webpack": "^1.0.0",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.12.1",
    "npm-scripts-help": "^0.7.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "express-to-koa": "^1.0.6",
    "koa": "^2.4.1",
    "koa-middlewares": "^6.0.0",
    "ramda": "^0.25.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "jest": {
    "globals": {
      "process.env.NODE_ENV": "test",
      "__NODE_ENV__": "test"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ]
  }
}

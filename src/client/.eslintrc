{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "import",
    "react"
  ],
  "extends": [
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "overrides": [
    {
      "files": ["*.spec.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "env": {
    "browser": true,
  },
  "globals": {
    "module": true,
    "process": true,
  },

  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
